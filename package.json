{
  "name": "adonis-apollo",
  "version": "0.6.2",
  "description": "Apollo GraphQL server for AdonisJs",
  "main": "./lib/providers/ApolloProvider.js",
  "types": "./lib/src/types.d.ts",
  "files": [
    "lib"
  ],
  "keywords": [
    "adonisjs",
    "adonis",
    "graphql",
    "apollo",
    "provider"
  ],
  "author": "MichaÃ«l Zasso",
  "license": "MIT",
  "adonisjs": {
    "templates": {
      "basePath": "./lib/config",
      "config": [
        "apollo.txt"
      ]
    },
    "types": "adonis-apollo",
    "providers": [
      "adonis-apollo"
    ]
  },
  "scripts": {
    "clean": "rimraf lib",
    "eslint": "eslint src providers --ext ts --cache",
    "eslint-fix": "npm run eslint -- --fix",
    "prepublishOnly": "npm run tsc && copyfiles \"config/**/*.txt\" lib",
    "test": "npm run eslint",
    "test-coverage": "npm run test-only -- --coverage",
    "test-only": "jest",
    "tsc": "npm run clean && npm run tsc-cjs",
    "tsc-cjs": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zakodium/adonis-apollo.git"
  },
  "bugs": {
    "url": "https://github.com/zakodium/adonis-apollo/issues"
  },
  "homepage": "https://github.com/zakodium/adonis-apollo#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "peerDependencies": {
    "@adonisjs/core": "2.x.x"
  },
  "devDependencies": {
    "@adonisjs/core": "^2.0.20",
    "@adonisjs/fold": "^6.1.5",
    "@types/jest": "^24.0.23",
    "@types/node-fetch": "^2.5.4",
    "@typescript-eslint/eslint-plugin": "^2.9.0",
    "@typescript-eslint/parser": "^2.9.0",
    "copyfiles": "^2.1.1",
    "eslint": "^6.7.1",
    "eslint-config-cheminfo": "^2.0.4",
    "eslint-config-cheminfo-typescript": "^4.1.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.4",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "@apollographql/graphql-playground-html": "^1.6.24",
    "apollo-server-core": "^2.9.12",
    "graphql": "^14.5.8",
    "graphql-tools": "^4.0.6",
    "merge-graphql-schemas": "^1.7.3"
  }
}
