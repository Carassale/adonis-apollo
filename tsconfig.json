{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib",
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "types": ["@adonisjs/core"],
    "strictFunctionTypes": false,
    "skipLibCheck": true
  },
  "include": ["./src/**/*", "./providers/**/*"],
  "exclude": ["./src/**/__tests__"]
}
